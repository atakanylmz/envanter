@{
}

<form class="row g-3" asp-controller="KullaniciYonetim" asp-action="EkleDuzenle" method="post">
    <input asp-for="Id" type="hidden"/>
    <div class="col-auto">
        <label asp-for="Eposta" >Eposta</label>
        <input type="text"  class="form-control-plaintext" asp-for="Eposta">
    </div>
    <div class="col-auto">
        <label asp-for="Ad">Ad</label>
        <input type="text"  class="form-control-plaintext" asp-for="Ad">
    </div>
    <div class="col-auto">
        <label asp-for="Soyad">Soyad</label>
        <input type="text"  class="form-control-plaintext" asp-for="Soyad">
    </div>
    <div class="col-auto">
        <label asp-for="RolA_chk">Rol A</label>
        <input asp-for="RolA_chk" type="checkbox" />
    </div>
    <div class="col-auto">
        <label asp-for="RolB_chk">Rol B</label>
        <input asp-for="RolB_chk" type="checkbox" />
    </div> 
    @if (ViewBag.mesaj != null)
    {
        <br />
        <label> @ViewBag.Mesaj</label>
    }
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Kaydet</button>
    </div>
</form>