<form class="row g-3" asp-controller="KullaniciYonetim" asp-action="EkleDuzenle" method="post">
    <input asp-for="Id" type="hidden"/>
    <div class="col-auto">
        <label asp-for="Eposta" >Eposta</label>
        <input type="text"  class="form-control" asp-for="Eposta">
    </div>
    <div class="col-auto">
        <label asp-for="Ad">Ad</label>
        <input type="text"  class="form-control" asp-for="Ad">
    </div>
    <div class="col-auto">
        <label asp-for="Soyad">Soyad</label>
        <input type="text"  class="form-control" asp-for="Soyad">
    </div>

    @for (int i = 0; i < Model.TumRoller.Count; i++)
    {
         <div class="col-auto">
            <label>@Model.TumRoller[i].Ad</label>
            <input name="RolIdler_chk" type="checkbox" value="@Model.TumRoller[i].Id" @(Model.RolIdler_chk.Contains(Model.TumRoller[i].Id)?"Checked":"") />
        </div>
    }
